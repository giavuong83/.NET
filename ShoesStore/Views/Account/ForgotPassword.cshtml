@model ShoesStore.ViewModels.ForgotPasswordViewModel

<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Reset Password</h1>
                <nav class="d-flex align-items-center">
                    <a asp-action="Index" asp-controller="Home">Home<span class="lnr lnr-arrow-right"></span></a>
                    <a>Reset Password</a>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->

<!--================Reset Password Box Area =================-->
<section class="login_box_area section_gap">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login_box_img">
                    <img class="img-fluid" src="~/karma-master/img/login.jpg" alt="">
                    <div class="hover">
                        <h4>Remember your password?</h4>
                        <p>Return to login page to access your account</p>
                        <a asp-action="Login" asp-controller="Account" class="primary-btn">Back to Login</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="login_form_inner">
                    <h3>Reset Password</h3>
                    <p class="text-center mb-4">Enter your email address and we'll send you a link to reset your password.</p>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <form asp-action="ForgotPassword" asp-controller="Account" class="row login_form" method="post" id="contactForm" novalidate="novalidate">
                        <div class="col-md-12 form-group">
                            <input asp-for="Email" type="email" class="form-control" 
                                   placeholder="Enter your email" 
                                   onfocus="this.placeholder = ''" 
                                   onblur="this.placeholder = 'Enter your email'">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <button type="submit" class="primary-btn">Send Reset Link</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Reset Password Box Area =================-->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}